{
  "display": {
    "notifications": true,
    "offendingContent": true,
    "rulesSummary": false,
    "shortStats": true,
    "verbose": true
  },
  "rules": [
    {
      "filter": "\\.ts$",
      "message": "You’ve got leftover `console.log`",
      "regex": "console\\.log"
    },
    {
      "message": "You’ve got leftover conflict markers",
      "regex": "/^[<>|=]{4,}/m"
    },
    {
      "filter": "\\.ts$",
      "message": "You have unfinished devs",
      "nonBlocking": "true",
      "regex": "(?:FIXME|TODO)"
    }
  ]
}
